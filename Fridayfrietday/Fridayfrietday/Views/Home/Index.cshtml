@model Fridayfrietday.ViewModels.ProductReviewViewModel
@{
    ViewData["Title"] = "Snackbar Home";
}

    <!-- Carousel Start -->
    <div class="container-fluid pt-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/Images/Header.png" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-7">
                                    <h1 class="display-2 mb-5 animated slideInDown">Welkom bij Snackbar, de lekkerste snacks van Maastricht!</h1>
                                    <a href="/Products" class="btn btn-primary rounded-pill py-sm-3 px-sm-5">Bestel nu</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/Images/Header.png" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-7">
                                    <h1 class="display-2 mb-5 animated slideInDown">Bekijk onze deals</h1>
                                    <a href="/Products" class="btn btn-primary rounded-pill py-sm-3 px-sm-5">Bestel nu</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->
    <!-- About Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        <img class="img-fluid w-100" src="~/Images/frietmetmayo.png">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <h1 class="display-5 mb-4">Beste snackbar van Maastricht</h1>
                    <p class="mb-4">Hier bij Snackbar frituren wij onze frieten en snacks in het heerlijkste frietenvet. Alles wordt met liefde bereid en zo snel als mogelijk voor U klaargemaakt.</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Lekkerste Frieten</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Snel bereid</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Allergie veilig</p>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    <!-- Product Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Our Products</h1>
                    <p>Bekijk ons overheerlijk assortiment van snacks en verfrissende drankjes</p>
                </div>
            </div>
            <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
                <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                    <!-- Navigation item for each category -->
                    @foreach (var category in Model.Products.Select(p => p.Category).Distinct())
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-@category.Id">@category.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="tab-content">
            @foreach (var category in Model.Products.Select(p => p.Category).Distinct())
            {
                <div id="tab-@category.Id" class="tab-pane fade p-0 @if(category == Model.Products.Select(p => p.Category).FirstOrDefault()) {
            <text>show active</text>
}">
                    <div class="row g-4">
                        @foreach (var product in Model.Products.Where(p => p.CategoryId == category.Id))
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="product-item">
                                    <div class="position-relative bg-light overflow-hidden">
                                        <img class="img-fluid w-100" src="~/Images/@product.ImageLink" alt="@product.Name">
                                    </div>
                                    <div class="text-center p-4">
                                        <a class="d-block h5 mb-2" href="#">@product.Name</a>
                                        <span class="text-primary me-1">€ @product.Price.ToString("0.00")</span>
                                    </div>
                                    <div class="d-flex border-top">
                                        @if (product.AllowsSauces)
                                        {
                                            <small class="w-50 text-center border-end py-2">
                                                <a class="text-body customize-btn" href="#" data-product-id="@product.Id">
                                                    <i class="fa fa-eye text-primary me-2"></i> Customize
                                                </a>
                                            </small>
                                        }
                                        <small class="w-50 text-center py-2">
                                            <form method="post">
                                                <input type="hidden" name="ProductId" value="@product.Id" />
                                                <input type="hidden" name="SelectedSauceIds" id="selectedSauceIds-@product.Id" />
                                                <input type="hidden" name="Quantity" value="1" />
                                                <button type="button" class="btn btn-primary add-to-cart-btn" data-product-id="@product.Id">
                                                    <i class="fa fa-shopping-bag text-white me-2"></i> Add to cart
                                                </button>
                                            </form>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="text-md-end  wow fadeIn" data-wow-delay="0.5s">
    <a class="btn btn-lg btn-secondary rounded-pill py-3 px-5" href="Cart/ViewCart">Afrekenen</a>
</div>
    <!-- Product End -->
    <!-- Firm Visit Start -->
    <div class="container-fluid bg-primary bg-icon mt-5 py-6">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-md-7 wow fadeIn" data-wow-delay="0.1s">
                    <h1 class="display-5 text-white mb-3">Kom snel langs</h1>
                    <p class="text-white mb-0">Kom snel langs om onze heerlijke frieten te proberen. Met de knop hiernaast ziet U meteen hoe U bij ons terecht komt.</p>
                </div>
                <div class="col-md-5 text-md-end wow fadeIn" data-wow-delay="0.5s">
                    <a class="btn btn-lg btn-secondary rounded-pill py-3 px-5" href="googlemaps">Bekijk nu</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Firm Visit End -->
    <!-- Testimonial Start -->
    <div class="container-fluid bg-light bg-icon py-6 mb-5">
        <div class="container">
            <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <h1 class="display-5 mb-3">Customer Reviews</h1>
                <p>Bekijk wat onze klanten van ons vinden of voeg zelf iets toe</p>
            </div>
            <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
                <!-- Start foreach loop for reviews -->
                @foreach (var review in Model.Reviews)
                {
                    <div class="testimonial-item position-relative bg-white p-5 mt-4">
                        <!-- Stars based on Review.Stars -->
                        <div class="mb-3">
                            @for (int i = 0; i < Math.Floor((double)review.Stars); i++)
                            {
                                <i class="fa fa-star text-primary"></i>
                            }
                            @if (review.Stars % 1 != 0)
                            {
                                <i class="fa fa-star-half-alt text-primary"></i>
                            }
                        </div>
                        <i class="fa fa-quote-left fa-3x text-primary position-absolute top-0 start-0 mt-n4 ms-5"></i>
                        <p class="mb-4">@review.Description</p>
                        <div class="d-flex align-items-center">
                            <div class="ms-3">
                                <h5 class="mb-1">@review.Name</h5>
                            </div>
                        </div>
                    </div>
                }
                <!-- End foreach loop -->
            </div>
            <div class="text-md-end  wow fadeIn" data-wow-delay="0.5s">
                <a class="btn btn-lg btn-secondary rounded-pill py-3 px-5" href="/Reviews">Laat een review achter</a>
            </div>
        </div>
    </div>
    <!-- Testimonial End -->

    <!-- model for customize products-->
<div class="modal fade" id="customiseModal" tabindex="-1" aria-labelledby="customiseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customiseModalLabel">Customize Your Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="customizeForm" method="post">
                    <input type="hidden" name="ProductId" id="modalProductId" />
                    <div class="mb-3">
                        <label for="sauces" class="form-label">Select Sauces:</label>
                        <div id="sauceOptions" class="form-check">
                            @foreach (var sauce in Model.AvailableSauces)
                            {
                                <div>
                                    <input class="form-check-input" type="checkbox" name="SelectedSauces" value="@sauce.Id" id="sauce-@sauce.Id" />
                                    <label class="form-check-label" for="sauce-@sauce.Id">@sauce.Name</label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" id="quantity" name="Quantity" class="form-control" value="1" min="1" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="customizeAndAddToCart()">Add to Cart</button>
            </div>
        </div>
    </div>
</div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
<script src="~/js/Product.js"></script>
    <!-- Template Javascript -->
    <script src="js/main.js"></script>
