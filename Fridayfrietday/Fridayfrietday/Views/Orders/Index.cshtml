@model IEnumerable<Order>

<!-- Page Header Start -->
<div class="container-fluid image page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-3 mb-3 animated slideInDown">Huidige bestellingen</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="/Home">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Bestellingen</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

@if (Model.Any())
{
    <div class="container">
        <h3>Orders van de laatste 24 uur</h3>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Total Price</th>
                    <th>Afhaalnummer</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderDate?.ToString("g")</td>
                        <td>@order.TotalPrice</td>
                        <td>@order.PickupNumber</td>

                        <td>
                            <form asp-action="UpdateOrderStatus" method="post">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <select name="OrderStatus" class="form-control" onchange="this.form.submit()">
                                    <option value="Bestelling aangekomen" selected="@(order.OrderStatus == "Bestelling aangekomen" ? "selected" : null)">Bestelling aangekomen</option>
                                    <option value="Bestelling aan het bereiden" selected="@(order.OrderStatus == "Bestelling aan het bereiden" ? "selected" : null)">Bestelling aan het bereiden</option>
                                    <option value="Bestelling bereid" selected="@(order.OrderStatus == "Bestelling bereid" ? "selected" : null)">Bestelling bereid</option>
                                    <option value="Bestelling opgehaald" selected="@(order.OrderStatus == "Bestelling opgehaald" ? "selected" : null)">Bestelling opgehaald</option>
                                </select>
                                <div class="form-group mt-2">
                                    <label for="VerwachteOphaaltijd">Verwachte ophaaltijd:</label>
                                    <input type="time" name="VerwachteOphaaltijd" class="form-control" value="@order.VerwachteOphaaltijd?.ToString("HH:mm")" onchange="this.form.submit()" />
                                </div>
                            </form>
                        </td>


                        <td>
                            <button class="btn btn-info toggle-details" data-order-id="@order.Id">View Items</button>
                            <div class="order-details" id="details-@order.Id" style="display:none;">
                                <ul class="list-group mt-2">
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <li class="list-group-item">
                                            <div class="d-flex align-items-center">
                                                <img src="~/Images/@detail.Product.ImageLink" alt="@detail.Product?.Name" class="img-thumbnail me-3" style="width: 70px; height: 70px;">
                                                @detail.Product?.Name - Quantity: @detail.Quantity
                                            </div>
                                            <ul class="list-group">
                                                @foreach (var sauce in detail.SelectedSauces)
                                                {
                                                    <li class="list-group-item">@sauce.Sauce?.Name</li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else 
{
    <div class="container">
        <p class="text-danger text-center">Geen orders geplaatst in de afgelopen 24 uur</p>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.toggle-details').click(function () {
                var orderId = $(this).data('order-id');
                $('#details-' + orderId).toggle();
            });
        });
    </script>
}
