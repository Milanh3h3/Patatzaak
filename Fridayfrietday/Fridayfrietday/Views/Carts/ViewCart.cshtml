@model IEnumerable<Fridayfrietday.Models.OrderDetail>

<div class="container">
    <h1>Your Shopping Cart</h1>
    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Sauces</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>
                            @foreach (var sauce in item.SelectedSauces)
                            {
                                <span>@sauce.Sauce.Name </span>
                            }
                        </td>
                        <td>€@(item.Product.Price * item.Quantity + item.SelectedSauces.Sum(s => s.Sauce.Price))</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="ConfirmOrder" class="btn btn-primary">Confirm Order</a>
    }
</div>
