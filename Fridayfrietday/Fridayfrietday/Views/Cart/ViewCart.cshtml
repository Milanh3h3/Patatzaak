@model IEnumerable<Fridayfrietday.Models.OrderDetail>

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="text-md-end wow fadeIn" data-wow-delay="0.5s">
        <a class="btn btn-lg btn-secondary rounded-pill py-3 px-5" href="/Reviews">Laat een review achter</a>
    </div>

    <h2 class="mb-4">Order Details</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Sauces</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>@orderDetail.Product?.Name</td>
                        <td>@orderDetail.Quantity</td>
                        <td>
                            @if (orderDetail.SelectedSauces != null && orderDetail.SelectedSauces.Any())
                            {
                                <ul>
                                    @foreach (var orderDetailSauce in orderDetail.SelectedSauces)
                                    {
                                        <li>@orderDetailSauce.Sauce?.Name</li> <!-- This should now work -->
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>No sauces selected</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No order details found.</p>
    }
</div>
