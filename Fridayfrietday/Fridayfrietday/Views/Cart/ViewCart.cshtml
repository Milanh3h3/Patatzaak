@model IEnumerable<Fridayfrietday.Models.OrderDetail>

@{
    ViewData["Title"] = "Order Details";
}
<!-- Page Header Start -->
<div class="container-fluid image page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Uw Winkelmandje</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="/Home">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Winkelmandje</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Bestelling afronden</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Products" class="btn btn-secondary btn-lg">Terug naar bestellen</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="order-details card shadow-sm p-4 mb-4">
                <h3 class="mb-4">De bestelling</h3>

                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>Aantal</th>
                                <th>Sauzen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderDetail in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/Images/@orderDetail.Product.ImageLink" alt="@orderDetail.Product?.Name" class="img-thumbnail me-3" style="width: 70px; height: 70px;">
                                            <span>@orderDetail.Product?.Name</span>
                                        </div>
                                    </td>
                                    <td>@orderDetail.Quantity</td>
                                    <td>
                                        @if (orderDetail.SelectedSauces != null && orderDetail.SelectedSauces.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var orderDetailSauce in orderDetail.SelectedSauces)
                                                {
                                                    <li>
                                                        <i class="bi bi-droplet me-1"></i>@orderDetailSauce.Sauce?.Name
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span>Geen sauzen geselecteerd</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Geen bestelling gevonden.</p>
                }
            </div>
        </div>

        <div class="col-md-4">
    <div class="card shadow-sm p-4 mb-4">
        <h4>Bestelling afronden</h4>
        <form asp-action="ConfirmOrder" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="email" class="form-label">Emailadres:</label>
                <input type="email" name="email" id="email" class="form-control" required placeholder="Voer uw emailadres in">
            </div>
            <button type="submit" class="btn btn-success btn-lg w-100">Bestelling versturen</button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-4">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

    </div>
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/wow/wow.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>
