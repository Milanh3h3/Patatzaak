@model Fridayfrietday.Models.Category

@{
    ViewData["Title"] = "Categorie Aanpassen";
}

<!-- Pagina Header Start -->
<div class="container-fluid image page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Categorieën aanpassen</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="/Home">Startpagina</a></li>
                <li class="breadcrumb-item"><a class="text-body" href="/Categories/Index">Categorieën</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Aanpassen @Model.Name</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Pagina Header Einde -->

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Terug naar Overzicht</a>
</form>

<!-- JavaScript Bibliotheken -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/wow/wow.min.js"></script>
<script src="~/lib/easing/easing.min.js"></script>
<script src="~/lib/waypoints/waypoints.min.js"></script>
<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="~/js/Product.js"></script>
<script src="~/js/main.js"></script>
